<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productImgCart"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/productNameCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/productImgCart" />

            <Button
                android:id="@+id/orderBtnCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productNameCart"
                android:layout_alignBottom="@id/productImgCart"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/productImgCart"
                android:text="ORDER NOW" />

            <Button
                android:id="@+id/removeBtnCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productNameCart"
                android:layout_alignBottom="@id/productImgCart"
                android:layout_toRightOf="@id/orderBtnCart"
                android:layout_marginLeft="40dp"
                android:text="REMOVE"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>